<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_shape">

        <com.seoullo.seoullotour.Utils.SquareImageView
            android:id="@+id/post_image"
            android:layout_width="125dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop" />
        
        <TextView
            android:id="@+id/post_text"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_toRightOf="@id/post_image" />

        <RelativeLayout
            android:id="@+id/post_location"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_toRightOf="@id/post_image"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:layout_below="@id/post_text">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/location_outline" />

            <TextView
                android:id="@+id/show_location"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginStart="40dp"
                android:background="@drawable/textview_clicked"
                android:text="LOCATION"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/count_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/show_location"
                android:text="Likes 0"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>