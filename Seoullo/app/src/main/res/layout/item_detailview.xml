<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <LinearLayout
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title Layout -->
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/detailviewitem_profile_image"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="7.5dp"
                tools:src="@mipmap/ic_launcher"
                 />
            <TextView
                android:id="@+id/detailviewitem_profile_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="User Name" />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/detailviewitem_time_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="time!@#!@#!@#" />
            <View
                android:layout_width="20dp"
                android:layout_height="0dp"
                android:layout_weight="0"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/detailviewitem_location"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            />

        <!-- Content ImageView -->
        <ImageView
            android:id="@+id/detailviewitem_imageview_content"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="fitXY"
            android:src="@color/colorPrimaryDark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:weightSum="1">

            <ImageView
                android:id="@+id/detailviewitem_favorite_imageview"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:srcCompat="@drawable/ic_favorite_border" />

            <ImageView
                android:id="@+id/detailviewitem_comment_imageview"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_chat_black_24dp" />

            <ImageView
                android:id="@+id/detailviewitem_bookmark_imageview"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_bookmark_border" />
        </LinearLayout>

        <TextView
            android:id="@+id/detailviewitem_favoritecounter_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            tools:text="좋아요 0개" />

        <TextView
            android:id="@+id/detailviewitem_explain_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="35dp"
            tools:text="사진 내용" />
    </LinearLayout>
</layout>