<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.naver.maps.map.MapView
        android:id="@+id/naver_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:navermap_locationButtonEnabled="true"
        android:layout_margin="2dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:id="@+id/direction_lin"
            >
            <include layout="@layout/layout_direction"/>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/navermap_guide"
            android:background="@drawable/round_shape_deepblue"

            android:gravity="center"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="5dp"
            android:padding="5dp"
            android:textColor="@color/white"

            android:visibility="invisible"
            />

    </com.naver.maps.map.MapView>
</androidx.constraintlayout.widget.ConstraintLayout>